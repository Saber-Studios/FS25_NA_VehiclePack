    <storeData>
        <name>
            <en>Bale container</en>
            <de>Ballenaufbau</de>
            <fr>Plateau à balles</fr>
        </name>
        <functions>
            <function>$l10n_function_baleTrailer</function>
        </functions>
        <specs>
            <combination xmlFilename="Gator.xml" />	
            <combination xmlFilename="Gator2x4.xml" />	
            <combination xmlFilename="BladeLeveler.xml" />	
            <combination xmlFilename="BladeSnow.xml" />	
        </specs>		
        <image>store_bale.dds</image>
        <price>1500</price>
        <lifetime>600</lifetime>
        <rotation>0</rotation>
        <brand>JOHNDEERE</brand>
        <category>baleLoaders</category>
        <vertexBufferMemoryUsage>825344</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>93440</indexBufferMemoryUsage>
        <textureMemoryUsage>1048576</textureMemoryUsage>
        <audioMemoryUsage>0</audioMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
    </storeData>	
	
	
    <base>
        <typeDesc>$l10n_typeDesc_baleTrailer</typeDesc>
    <filename>bale.i3d</filename>
        <size width="3.5" length="8" height="1.9" lengthOffset="0"/>
        <components>
            <component centerOfMass="0 0.2 0.45" solverIterationCount="10" mass="500"/>		
        </components>
        <schemaOverlay attacherJointPosition="0 0" name="IMPLEMENT" />
    </base>	
	
    <wheels>
    </wheels>

    <attachable>
        <inputAttacherJoints>
            <inputAttacherJoint node="attacherJoint" jointType="GatorLift" upperRotationOffset="0"/>
            <inputAttacherJoint node="attacherJoint" jointType="GatorLift4x2" upperRotationOffset="0">		
            <objectChange node="Added2x4" visibilityActive="true" visibilityInactive="false" />				
        </inputAttacherJoint>			
        </inputAttacherJoints>
        <support animationName="moveSupport" delayedOnAttach="false"/>	
        <brakeForce force="0.5"/>
    </attachable>
		
    <animations>
		<!-- backtipping -->
        <animation name="movingTool2">
            <part node="movingTool2"      startTime="1" endTime="5"   startRot="0 0 0"   endRot="-64 0 0" />
            <sound template="hydraulicOpen01" startTime="1" endTime="5" volumeScale="1.0" pitchScale="0.7"/>				
        </animation>						
        <!-- move support wheel down/up -->
        <animation name="moveSupport">
            <part node="supportCol1" startTime="0.0" endTime="0.001" startTrans="0.194 0.7 0.329" endTrans="0 0.7 0"/>
            <part node="supportCol1" startTime="0.001" endTime="0.01" startTrans="0 0.7 0" endTrans="0 0.0 0"/>			
            <part node="supportCol" startTime="0.0" endTime="0.001" startTrans="-0.194 0.7 0.329" endTrans="0 0.7 0"/>
            <part node="supportCol" startTime="0.001" endTime="0.01" startTrans="0 0.7 0" endTrans="0 0.0 0"/>							
            <part node="support" startTime="0" endTime="0.05" visibility="false"/>
            <part node="support" startTime="0.05" endTime="0.1" visibility="true"/>
            <part node="movingTool1" startTime="0" endTime="0.05" visibility="true"/>
            <part node="movingTool1" startTime="0.05" endTime="0.1" visibility="false"/>	
            <sound template="clackVar1"   startTime="0.4"  direction="1"  volumeScale="1.5" pitchScale="1.5" linkNode="attacherJoint"/>
            <sound template="metalClose"  startTime="0.1"  direction="-1" volumeScale="1.2" pitchScale="2"   linkNode="attacherJoint"/>
            <sound template="latchSmall"  startTime="0.49"                volumeScale="0.2" pitchScale="1.4" linkNode="attacherJoint"/>				
        </animation>
    </animations>		
    <cylindered>
    <movingTools>		
		<!-- backTipping -->	
        <movingTool node="attacherJoint">
            <inputAttacherJoint value="true" />
            <dependentPart node="movingTool1" />			
        </movingTool>		
        <movingTool node="movingTool2">
            <inputAttacherJoint value="true" />
            <dependentPart node="movingTool1" />
                <rotation detachingRotMinLimit="0" />			
        </movingTool>		
    </movingTools>
    <movingParts>  		
		<movingPart node="movingTool1" referencePoint="movingTool3" referenceFrame="movingTool3" lockAxis="3">
            <translatingPart node="movingPart1" />
        </movingPart>
        </movingParts>
    </cylindered>
    <foldable>
        <foldingConfigurations>
            <foldingConfiguration price="0" >
                <foldingParts>
                    <foldingPart animationName="movingTool2" speedScale="1" />
                </foldingParts>
                <size widthOffset="0.6"/>
            </foldingConfiguration>
        </foldingConfigurations>
    </foldable>				

	
    <ai>
        <allowTurnBackward value="false"/>
        <turningRadiusLimitation radius="9"/>
        <agentAttachment width="1" height="1.0" length="0.6" lengthOffset="-0.15"/>
    </ai>
    <tensionBelts>
        <tensionBeltsConfigurations>
            <tensionBeltsConfiguration>
                <tensionBelts linkNode="tensionBelts" jointNode="Bale_main_component1" maxEdgeLength="0.1" geometryBias="0.01" ratchetPosition="0.2" defaultOffset="0.1" defaultOffsetSide="0.1" defaultHeight="4" activationTrigger="beltActivationTrigger">
                    <tensionBelt startNode="tensionBeltStart1" endNode="tensionBeltEnd1" offsetLeft="0.2" />
                    <tensionBelt startNode="tensionBeltStart2" endNode="tensionBeltEnd2" />
                    <sounds>
                        <addBelt template="beltOpen" />
                        <removeBelt template="beltClose" />
                    </sounds>
                </tensionBelts>
            </tensionBeltsConfiguration>
        </tensionBeltsConfigurations>
    </tensionBelts>
    <foliageBending>
        <bendingNode minX="-0.85" maxX="0.85" minZ="-0.5" maxZ="0.8" yOffset="0.22" />
    </foliageBending>		
    <baseColorConfigurations useDefaultColors="true" defaultColorIndex="26">
        <material materialSlotName="base_color_01" />
    </baseColorConfigurations>
	
    <wearable wearDuration="480" workMultiplier="5" fieldMultiplier="2"/>
    <washable dirtDuration="90" washDuration="1" workMultiplier="3" fieldMultiplier="2"/>	
    <i3dMappings>
        <i3dMapping id="Bale_main_component1" node="0>" />	
        <i3dMapping id="attacherMove" node="0>0|1" />		
        <i3dMapping id="moveSupport" node="0>1"/>
        <i3dMapping id="moveSupport1" node="0>1|0"/>
        <i3dMapping id="supportCol" node="0>1|0|0"/>
        <i3dMapping id="moveSupport2" node="0>1|1"/>
        <i3dMapping id="supportCol1" node="0>1|1|0"/>
        <i3dMapping id="support" node="0>1|2"/>		
        <i3dMapping id="attacherJoint" node="0>0|1|0" />	
        <i3dMapping id="exactFillRoot" node="0>0|6"/>		
        <i3dMapping id="backDoor" node="0>0|0|0"/>
        <i3dMapping id="movingTool1" node="0>0|4"/>
        <i3dMapping id="movingTool2" node="0>0|0"/>
        <i3dMapping id="movingTool3" node="0>0|0|1"/>		
        <i3dMapping id="movingPart1" node="0>0|4|0" />
        <i3dMapping id="tensionBelts" node="0>0|0|2" />
        <i3dMapping id="tensionBeltStart1" node="0>0|0|2|0" />
        <i3dMapping id="tensionBeltEnd1" node="0>0|0|2|0|0" />
        <i3dMapping id="tensionBeltStart2" node="0>0|0|2|1" />
        <i3dMapping id="tensionBeltEnd2" node="0>0|0|2|1|0" />		
        <i3dMapping id="beltActivationTrigger" node="0>0|0|2|2" />	
        <i3dMapping id="Added2x4" node="0>0|0|5" />		
    </i3dMappings>
</vehicle>	
