    <storeData>
        <name>$l10n_shopItem_frontloaderPalletFork</name>
        <specs>
            <combination filterCategory="frontLoaders"/>
            <combination filterCategory="frontLoaderVehicles"/>
            <combination xmlFilename="xml/series6RExtraLarge.xml"/>
            <combination xmlFilename="xml/series6RLarge175_215.xml"/>
            <combination xmlFilename="xml/series6RLarge.xml"/>	
			</specs>
        <functions>
            <function>$l10n_function_frontloaderPalletFork</function>
        </functions>
        <image>stores/store_frontloaderPalletFork.png</image>
        <price>1700</price>
        <lifetime>600</lifetime>
        <rotation>0</rotation>
        <brand>ALBUTT</brand>
        <category>frontLoaderTools</category>
        <shopTranslationOffset>0 -0.005 0</shopTranslationOffset>
        <shopRotationOffset>0.388 0 0</shopRotationOffset>
        <vertexBufferMemoryUsage>28416</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>6912</indexBufferMemoryUsage>
        <textureMemoryUsage>458752</textureMemoryUsage>
        <audioMemoryUsage>0</audioMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
